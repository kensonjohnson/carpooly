<header>
  <img src="assets/BannerDark.png" />
</header>
<main id="main">
  <a href="/users/logout">Logout</a>
  <div id="currentCarpools">
    <div class="window-header">
      <h2 class="Title">My Current Carpools</h2>
      <button class="button" id="carpools">+ -</button>
    </div>
    <div class="info" id="carpoolInfo">
      <p>You don't have any Carpools! Search below to find one!</p>
    </div>
  </div>
  <div id="find">
    <h2 class="Title">
      Find My Carpools/ Friends<button class="button" id="friends">+ -</button>
    </h2>
    <div class="info" id="findMyPeeps">
      <input id="searchPeeps" />
    </div>
  </div>
  <div id="myProfile">
    <h2 class="Title">
      My Profile!<button class="button" id="profile">+ -</button>
    </h2>
    <div class="info" id="profileInfo">
      <img id="profile-pic" />
      <p>This is who I am!</p>
      <p>I am looking for......</p>
    </div>
  </div>
</main>
<footer>
  <p>Created February, 2023 by Kenson, Audrey and Olijijuan</p>
</footer>
<script>
  // calling IDs for individual windows
  const carpoolInfo = document.getElementById("carpoolInfo");
  const findMyPeeps = document.getElementById("findMyPeeps");
  const profileInfo = document.getElementById("profileInfo");

  // calling IDs for individual buttons
  const carpoolsButton = document.getElementById("carpools");
  const friendsButton = document.getElementById("friends");
  const profileButton = document.getElementById("profile");

  // set up addEventListeners for each button to collapse associated window div
  carpoolsButton.addEventListener("click", () => {
    carpoolInfo.classList.toggle("window-expand");
  });

  friendsButton.addEventListener("click", () => {
    findMyPeeps.classList.toggle("window-expand");
  });

  profileButton.addEventListener("click", () => {
    profileInfo.classList.toggle("window-expand");
  });
</script>
